//Для структуры Date напишите метод, находящий следующую дату палиндром.

#include <iostream>
using namespace std;


struct Date {

	int year;
	int month;
	int day;

	Date(){
		year = 0;
		month = 0;
		day = 0;
	}
	Date(int a,int b,int c){
		year = a;
		month = b;
		day = c;
	}


        void cin(){
		cin >> day >> month >> year;
	}

	void cout(){
		if ((day / 10) == 0) cout << 0;
		cout << day << ".";
		if ((month / 10) == 0) cout << 0;
		cout << month << '.' << year;
	}

	bool bissextile(){
		if ((year % 400) == 0) {
			return 1;
		}
		else {
			if ((year % 100) == 0){
				return 0;
			}
			else{
				if ((year % 4) == 0){
					return 1;
				}
				else{
					return 0;
				}
			}
		}
	}


	


};
